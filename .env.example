# Telegram消息转发机器人 v3.0 环境配置示例
# 复制此文件为 .env 并填入实际配置值

# === Telegram API 配置 ===
# 从 https://my.telegram.org 获取
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# 从 @BotFather 获取
BOT_TOKEN=your_bot_token_here

# 用于用户客户端登录的手机号
PHONE_NUMBER=+1234567890

# 管理员用户ID列表（用逗号分隔）
ADMIN_USER_IDS=your_user_id

# === Web界面配置 ===
WEB_HOST=0.0.0.0
WEB_PORT=9393
SESSION_SECRET=tg-bot-secret-key-2025

# === 数据库配置 ===
DATABASE_URL=sqlite:///data/bot.db

# === 日志配置 ===
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log

# === 代理配置（可选） ===
HTTP_PROXY=
HTTPS_PROXY=
ENABLE_PROXY=false
PROXY_TYPE=http
PROXY_HOST=127.0.0.1
PROXY_PORT=1080
PROXY_USERNAME=
PROXY_PASSWORD=

# === 转发配置 ===
MAX_FORWARD_DELAY=5
ENABLE_MEDIA_FORWARD=true
ENABLE_KEYWORD_FILTER=true
ENABLE_REGEX_REPLACE=true

# === 高级配置 ===
ENABLE_HISTORY_CRAWL=false
HISTORY_CRAWL_LIMIT=100
MESSAGE_BATCH_SIZE=10
MESSAGE_PROCESSING_DELAY=1

# === 监控配置 ===
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
ENABLE_PERFORMANCE_MONITORING=false

# === 日志管理配置 ===
ENABLE_LOG_CLEANUP=true
LOG_RETENTION_DAYS=30
LOG_CLEANUP_TIME=02:00
MAX_LOG_SIZE=100

# === 时区配置 ===
TZ=Asia/Shanghai
